<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <Link  rel="stylesheet" href="main.css"/>
   
    <title>Document</title>
</head>
<body>
    <%- include('layouts/navbar.ejs'); %>

    <div class="container">
        <div class="row my-4" >
            <div class="col-lg-12">
              
               <div class="table-responsive">
                   <% if(users!='') { %>
                    
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th></th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>E-Mail</th>
                                <th>Phone</th>
                                <th>City</th>
                                <th>Post Code</th>
                                <th>Action</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                           <% users.forEach((row,index) => { %>
                            <tr>
                                <td></td>
                                <td> <img src=" <%= row.image %>" width="50" class="img-thumbnail" alt=""/> </td>
                                <td><%= row.name %></td>
                                <td><%= row.email %></td>
                                <td><%= row.phone %></td>
                                <td>
                                    <a href="/edit/<%= row._id%>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="/delete/<%= row._id%>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                 </td>
                            </tr>
                            <% }) %>
                    </table>

                   <% } else { %>
                    <h1>No User Found</h1>
                    <% } %>
       
                   
               </div>
            </div>
        </div>

    </div>
    
</body>
</html>